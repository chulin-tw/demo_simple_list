<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/default_background_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/default_background"
        android:scaleType="centerCrop"
        android:src="@drawable/default_background" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/default_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/default_user_avatar"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="30dp"
            android:layout_toStartOf="@id/default_user_avatar"
            android:text="@string/default_username"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/default_user_avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/default_avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/default_avatar" />
    </RelativeLayout>
</RelativeLayout>